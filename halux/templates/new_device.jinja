{% extends "base.jinja" %}
{% block title %}New Device{% endblock %}
{% block content %}
<form id="edit-form">
    <label for="name">Device Name:</label>
    <input type="text" id="name" name="name" value='NEW BOX'>
    <input type="submit" value="Submit">
</form>

{% if data.sensors|length > 0 %}
<table>
    <h3 class='table-title'>Sensors</h3>
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    {% for s in data.sensors %}
    <tr>
        <td>{{ s.sensor_model_id }}</td>
        <td>{{ s.name }}</td>
    </tr>
    {% endfor %}
</table>
{% endif %}

{% if data.actuators|length > 0 %}
<table>
    <h3 class='table-title'>Actuators</h3>
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    {% for a in data.actuators %}
    <tr>
        <td>{{ a.actuator_model_id }}</td>
        <td>{{ a.name }}</td>
    </tr>
    {% endfor %}
</table>
{% endif %}

<script>
    document.getElementById('edit-form').addEventListener('submit', function (event) {
        event.preventDefault();

        const name = document.getElementById('name').value;

        fetch('/new_device', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                name,
            }),
        }).then(response => {
            if (response.ok) {
                window.location.href = '/devices';
            } else {
                alert('Error creating device');
            }
        });
    });
</script>
{% endblock %}